name: Test

on:
  push:
    branches: [main]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout ğŸ›ï¸
        uses: actions/checkout@v3.6.0
      - name: Use Node.js 16.x
        uses: actions/setup-node@v4
        with:
          node-version: '16.x'

      - name: Installing my packages
        run: npm ci

      - name: Lint
        run: npm run lint:ci

      - name: Test
        run: npm run test

      - name: Build
        run: npm run build